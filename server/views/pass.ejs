<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wagers | Admin Panel</title>
</head>
<body>
    <h1>Id: <%= currentPass._id %></h1>
    <h3>End date: <%= currentPass.expire_at %></h3>
    <h3>Available rewards:</h3>
    <div style="display: flex; justify-content: flex-start; align-items: center; flex-direction: row; width: 100%; overflow-x: auto;">
        <% availableRewards.forEach(reward => { %>
            <div style="border: 1px solid black; margin-right: 10px; padding: 10px;">
                <p><%= reward._id %></p>
                <p><%= reward.name %></p>
                <p><%= reward.type %></p>
                <p><%= reward.value %></p>
            </div>
        <% }); %>
    </div>
    <h3>Add cells</h3>
    <form id="addcellform">
        <div>
            <input type="text" placeholder="Free reward id" id="free_id">
            <p>*Leave free field empty to dont add free cell*</p>
        </div>
        <div>
            <input type="text" placeholder="Premium reward id" id="premium_id">
        </div>
        <input type="text" value="<%= currentPass._id %>" hidden id="battlepass_id">
        <br/>
        <input type="submit" value="Add Cell">
    </form>
    <h3>Cells: </h3>
    <% currentPass.cells.forEach((cell, index) => { %>
        <div style="border: 1px solid black;">
            <p>NÂ°<%= index + 1 %></p>
            <% if(cell.free_reward){ %>
                <p>Free reward : <%= cell.free_reward.name %> -> <%= cell.free_reward.value %></p>
            <% } %>
            <% if(cell.premium_reward){ %>
                <p>Premium reward : <%= cell.premium_reward.name %> -> <%= cell.premium_reward.value %></p>
            <% } %>
        </div>
    <% }); %>
    <script src="/js/pass.js"></script>
</body>
</html>